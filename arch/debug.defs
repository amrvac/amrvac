F90 := mpif90
FFLAGS := -c
F90FLAGS := -cpp -ffree-form -fimplicit-none -O2 -finit-real=snan -finit-integer=-2147483648	\
-g -fbacktrace -fcheck=all -ffpe-trap=invalid,zero \
-Wall -Wno-unused-dummy-argument -Wno-unused-function -Wno-unused -Wno-zerotrip \
-Wno-maybe-uninitialized
LINK := $(F90) $(F90FLAGS)
