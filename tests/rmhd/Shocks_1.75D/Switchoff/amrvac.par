&filelist
  base_filename='./output/rhd_shock'
  saveprim         = T
  autoconvert      = T
  level_io         = 1
  convert_type = 'vtuBCCmpi'
  nwauxio=2 
/

&savelist
   itsave(1,1)     = 0
   itsave(1,2)     = 0
   !ditsave_dat     = 1
   !ditsave_log     = 1
   dtsave_dat     = 1.d0
   dtsave_log     = 1.d0
/

&stoplist
   time_max = 2.d2
   dtmin = 1.0d-20
/

 &methodlist
   time_stepper = 'threestep'
   time_integrator = 'IMEX_ARS3'
   check_small_values=.false.
   flux_scheme     = 20*'hll'
   limiter         = 20*'weno3'
   source_split_usr = .false.
   typesourcesplit = 'sfs'
   small_values_method = 'replace'
   small_pressure = 1.d-12
   small_density = 1.d-12
/

&boundlist
  typeboundary_min1 = 9*'cont' 
  typeboundary_max1 = 9*'cont' 
  internalboundary = F
/

 &meshlist
   refine_max_level   = 5
   refine_criterion   = 3
   domain_nx1         = 256
   block_nx1          = 16
   xprobmin1       = -5.d0
   xprobmax1       = 5.d0
   refine_threshold   = 20*0.5d0
   derefine_ratio     = 20*1.d0/2.d0
 /

 &paramlist
  courantpar       = 0.6d0
  !dtpar           = 2.d-3
  slowsteps = 2000
 /

 &rmhd_list
  He_abundance = 0.d0 !0.075d0
