! Used to perform convergence tests

&filelist
        base_filename='convergence_'
        typefilelog='special'
    	! convert_type='vtuBCCmpi'
        autoconvert=f
/

 &savelist
        dtsave_log=0.2d0
        ! dtsave_dat=0.2d0
 /

 &stoplist
        time_max=0.2d0
 /

 &methodlist
        time_stepper = 'threestep'
        flux_scheme = 20*'tvdlf'
        limiter=20*'cada3'
 /

 &boundlist
        nghostcells=3
        typeboundary_min1 = 'periodic'
        typeboundary_max1 = 'periodic'
 /

 &meshlist
        refine_max_level=1
        refine_threshold=20*0.1d0
        block_nx1=16
        domain_nx1=512
        xprobmin1=-30.0d0
        xprobmax1=30.0d0
        iprob=3
 /

 &paramlist
       courantpar=0.4d0
       dtdiffpar=0.2d0
 /

 &nonlinear_list
        kdv_source_term = T
 /

 &kdv_list
       kdv_order=2
 /
