 &filelist
        base_filename='woodtrain'
    	convert_type='vtuBCCmpi'
        autoconvert=T
        typefilelog='special'
/

 &savelist
        itsave(1,1)   = 0
        itsave(1,2)   = 0
        ditsave_log=1
        dtsave_dat=0.025d0
 /

 &stoplist
        time_max=1.0d0
 /

 &methodlist
        time_stepper = 'threestep'
        flux_scheme = 20*'hll'
        limiter=20*'woodward'
 /

 &boundlist
        nghostcells=2
        typeboundary_min1 = 'periodic'
        typeboundary_max1 = 'periodic'
 /

 &meshlist
        refine_max_level=1
        refine_threshold=20*0.1d0
        block_nx1=10
        domain_nx1=600
        xprobmin1=0.0d0
        xprobmax1=2.0d0
        iprob=1
 /

 &paramlist
       courantpar=0.9d0
       dtdiffpar=0.9d0
 /

 &nonlinear_list
        kdv_source_term = T
 /

 &kdv_list
        kdv_delta = 0.022d0
        kdv_order = 1 
 /
