!=====================================================
! Project : Advection test: a VAC log
!
!=====================================================

 &filelist
        base_filename='test_schnakenberg_split'
        typefilelog='regression_test'
 /

 &savelist
        dtsave_log=0.01d0
 /

 &stoplist
        time_max=0.1d0
 /

 &methodlist
        time_stepper = 'twostep'
        flux_scheme = 20*'source'
 /

 &boundlist
        typeboundary_min1=2*'cont'
        typeboundary_max1=2*'cont'
        typeboundary_min2=2*'cont'
        typeboundary_max2=2*'cont'
 /

 &meshlist
        refine_max_level=1
        refine_threshold=20*0.1d0
        block_nx1=16
        block_nx2=16
        domain_nx1=128
        domain_nx2=128
        xprobmin1=0.0d0
        xprobmax1=1.0d0
        xprobmin2=0.0d0
        xprobmax2=1.0d0
 /

 &paramlist
       courantpar=0.8d0
       typecourant='minimum'
       dtpar=2.0d-3
 /

 &rd_list
       D1 = 0.05d0
       D2 = 1.0d0
       equation_name = "schnakenberg"
       rd_diffusion_method = "split"
 /
