 &filelist
        base_filename='output/test'
    	convert_type='vtuBCCmpi'
        autoconvert=T
 /

 &savelist
        itsave(1,1)=0
        itsave(1,2)=0
        dtsave_log=0.05d0
        dtsave_dat=0.05d0
 /

 &stoplist
        time_max=1.0d0
 /

 &methodlist
        time_stepper=  'threestep'
        flux_scheme =    20*'tvdlf'
        limiter= 20*'koren'
 /

 &boundlist
        typeboundary_min1='symm'
        typeboundary_max1='symm'
        typeboundary_min2='symm'
        typeboundary_max2='symm'
        ! typeboundary_min1='periodic'
        ! typeboundary_max1='periodic'
        ! typeboundary_min2='periodic'
        ! typeboundary_max2='periodic'
 /

 &meshlist
        refine_max_level=1
        refine_threshold=20*0.1d1
        block_nx1=16
        block_nx2=16
        domain_nx1=256
        domain_nx2=256
        xprobmin1=-5.0d0
        xprobmax1=5.0d0
        xprobmin2=-5.0d0
        xprobmax2=5.0d0
 /

 &paramlist
       !courantpar=0.8d0
       dtpar = 0.05
 /

 &rho_list
        rho_v = 0.0,0.0
 /
