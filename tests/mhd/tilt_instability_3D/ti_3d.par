 &filelist
        base_filename='ti_3d'
        typefilelog='regression_test'
        autoconvert   = T
        saveprim      = T
        nwauxio       = 1
/

 &savelist
        dtsave_log    = 1.d-4
 /

 &stoplist
        time_max     = 1.d-3
 /

 &methodlist
        time_stepper   = 'threestep'
        flux_scheme     = 20*'hll'
        limiter  = 20*'cada3'
 /

 &boundlist
        typeboundary_min1= 8*'special'
        typeboundary_max1= 8*'special'
        typeboundary_min2= 8*'special'
        typeboundary_max2= 8*'special'
        typeboundary_min3= 8*'periodic'
        typeboundary_max3= 8*'periodic'
 /

 &meshlist
        refine_criterion = 3
        refine_max_level=2
        w_refine_weight(1)=0.4d0
        w_refine_weight(6)=0.3d0
        w_refine_weight(7)=0.3d0
        refine_threshold=1*0.2d0
        derefine_ratio=1*0.1d0
        domain_nx1       = 32
        domain_nx2       = 32
        domain_nx3       = 16
        xprobmin1     = -3.0d0
        xprobmax1     = 3.0d0
        xprobmin2     = -3.0d0
        xprobmax2     = 3.0d0
        xprobmin3     = -1.0d0
        xprobmax3     = 1.0d0
 /

 &paramlist
        typecourant='maxsum'
        courantpar=0.9d0
        slowsteps=10
 /
