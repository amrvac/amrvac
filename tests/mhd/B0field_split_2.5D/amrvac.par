!==============================================================
! Project : bipolar linear force-free magnetic field
! Aim     : test time-independent magnetic field splitting
! Results :
! Update  : 04/04/2017
! configuration :
! $AMRVAC_DIR/setup.pl -d=2
!==============================================================

 &filelist
        base_filename='lfff_2d'
        saveprim=.true.
        autoconvert=.true.
        convert_type='vtuBmpi'
        nwauxio=4
 /

 &savelist
        itsave(1,1)=0
        itsave(1,2)=0
        dtsave_log=0.05d0
        dtsave_dat=0.2d0
 /
        ditsave_log = 1
        ditsave_dat =100

 &stoplist
        dtmin=1.D-7
        time_max=2.d0
 /

 &methodlist
        time_stepper=  'threestep'
        flux_scheme=    20*'hll'
        limiter= 20*'cada3'
        small_pressure=1.0d-8
        small_density=1.0d-14
 /
        tvdlfeps=0.5d0

 &boundlist
        typeboundary_min1 = 8*'periodic'
        typeboundary_max1 = 8*'periodic'
        typeboundary_min2 = 8*'special'
        typeboundary_max2 = 8*'special'
 /

 &meshlist
        refine_criterion=3
        refine_max_level=1
        refine_threshold=20*0.2d0
        derefine_ratio=20*0.1d0
        w_refine_weight(6)=0.3d0
        w_refine_weight(7)=0.3d0
        w_refine_weight(8)=0.4d0
        domain_nx1=128
        domain_nx2=64
        xprobmin1=-3.d0
        xprobmax1=3.d0
        xprobmin2=0.d0
        xprobmax2=3.d0
        iprob=2
 /

 &paramlist
        typecourant='maxsum'
        courantpar=0.8d0
 /

 &mhd_list
        B0field=.true.
        Busr=1.d0
        typedivbfix='linde'
 /
