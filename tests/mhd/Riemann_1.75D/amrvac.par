 &filelist
        base_filename='R_1d'
        autoconvert=.true.
        saveprim=.true.
 /

 &savelist
        itsave(1,1)=0
        itsave(1,2)=0
        ditsave_log=10
        dtsave_dat=0.1d0
 /

 &stoplist
        time_max=0.5d0
 /

 &methodlist
        time_stepper=  'threestep'
        flux_scheme=    20*'hll'
        limiter= 20*'cada3'
 /

 &boundlist
        typeboundary_min1=8*'cont'
        typeboundary_max1=8*'cont'
 /

 &meshlist
        refine_criterion=3
        refine_max_level=3
        w_refine_weight(1)=0.5
        w_refine_weight(5)=0.5
        refine_threshold=20*0.05d0
        domain_nx1=256
        xprobmin1=-1.d0
        xprobmax1= 1.d0
        iprob=21
 /

 &paramlist
        courantpar=0.8d0
        slowsteps=10
 /

 &mhd_list
        typedivbfix='none'
 /
