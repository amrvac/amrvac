!=====================================================
! Project : Prominence Rayleigh-Taylor dynamics, 2.5D case
! Aim     : MHD evolution in stratified atmosphere
! Results :
! Update  : 1/09/2015
! configuration :
! $AMRVAC_DIR/setup.pl -d=2
!=====================================================

 &filelist
        base_filename='pRT_a'
        autoconvert=.true.
        saveprim=.true.
        convert_type='vtuBCCmpi'
        nwauxio=3
 /

 &savelist
        itsave(1,1)=0
        itsave(1,2)=0
        dtsave_log     = 1.0d-3
        dtsave_dat     = 2.0d-2
 /

 &stoplist
        dtmin=1.D-6
        time_max=2.0d0
 /

 &methodlist
        time_stepper=  'twostep'
        flux_scheme=    20*'hll'
        limiter= 20*'vanleer'
        small_values_method='error'
        small_pressure=1.0d-14
        small_density=1.0d-14
 /

 &boundlist
        typeboundary_min1=8*'periodic'
        typeboundary_max1=8*'periodic'
        typeboundary_min2=8*'special'
        typeboundary_max2=8*'special'
 /

 &meshlist
        refine_criterion=3
        refine_max_level=6
        refine_threshold=20*0.2d0
        derefine_ratio=20*0.1d0
        block_nx1=10
        block_nx2=10
        domain_nx1=20
        domain_nx2=20
        xprobmin1=0.0d0
        xprobmax1=3.0d0
        xprobmin2=0.0d0
        xprobmax2=3.0d0
 /

 &paramlist
        slowsteps=10
        typecourant='maxsum'
        courantpar=0.8d0
 /
 
 &mhd_list
        mhd_n_tracer=1
        typedivbfix='glm'
        mhd_gravity=.true.
 /
