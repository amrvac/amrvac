!setup.pl -d=3
 &filelist
        base_filename='lfr_3dc'
        saveprim=.true.
        convert_type='vtuBmpi'
        autoconvert=.true.
        nwauxio=9
 /

 &savelist
        itsave(1,1)=0
        itsave(1,2)=0
        dtsave_log=0.01d0
        dtsave_dat=0.1d0
 /

 &stoplist
        time_max=5.d0
/

 &methodlist
        time_stepper='threestep'
        flux_scheme=20*'hll'
        limiter= 20*'cada3'
        small_pressure=1.0d-14
        small_density=1.0d-14
 /

 &boundlist
        typeboundary_min1=8*'special'
        typeboundary_max1=8*'special'
        typeboundary_min2=8*'special'
        typeboundary_max2=8*'special'
        typeboundary_min3=8*'special'
        typeboundary_max3=8*'special'
 /

 &meshlist
        refine_criterion=3
        refine_max_level=1
        w_refine_weight(6)=0.4d0
        w_refine_weight(7)=0.3d0
        w_refine_weight(8)=0.3d0
        refine_threshold=20*0.2d0
        block_nx1=16
        block_nx2=16
        block_nx3=16
        domain_nx1=64
        domain_nx2=64
        domain_nx3=64
        xprobmin1=-3.d0
        xprobmax1=3.d0
        xprobmin2=-3.d0
        xprobmax2=3.d0
        xprobmin3=-3.d0
        xprobmax3=3.d0
 /

 &paramlist
        typecourant='maxsum'
        courantpar=0.8d0
 /

 &mhd_list
        Busr=10.d0
        B0field=.false.
 /
