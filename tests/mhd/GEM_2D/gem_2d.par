!=====================================================
! Project : GEM challenge 2D
! Aim     : GEM setup
! Results : 
! Update  : 06/03/2017
! configuration :
! $AMRVAC_DIR/setup.pl -d=2
!=====================================================

&filelist
        base_filename ='gem_2d'
        typefilelog='regression_test'
        saveprim = .true.
        autoconvert = .true.
        convert_type='vtuBmpi'
        nwauxio = 4
/

 &savelist
        dtsave_log=1.d-3
/

 &stoplist
        time_max=5.d-2
/

 &methodlist
        time_stepper  = 'threestep'
        flux_scheme    = 20*'hll'
        limiter = 20*'cada3'
/

&boundlist
        typeboundary_min1=6*'periodic'
        typeboundary_max1=6*'periodic'
        typeboundary_min2='symm','symm','asymm','symm','symm','asymm'
        typeboundary_max2='symm','symm','asymm','symm','symm','asymm'
/

 &meshlist
        refine_criterion=3
        refine_max_level=4
        w_refine_weight(1)=0.4d0
        w_refine_weight(5)=0.3d0
        w_refine_weight(6)=0.3d0
        refine_threshold=20*0.2d0
        derefine_ratio=20*0.1d0
        domain_nx1=64
        domain_nx2=64
        iprob=1
        xprobmin1=-12.8d0
        xprobmax1=12.8d0
        xprobmin2=-6.4d0
        xprobmax2=6.4d0
/

 &paramlist
        typecourant='maxsum'
        courantpar=0.9d0
        slowsteps=10
        dtdiffpar=0.4d0
/
