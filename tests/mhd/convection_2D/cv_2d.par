!=====================================================
! Project : 2D MHD convection, with AMR
! Aim     : Hurlburt-Toomre setup
! Results :
! Update  : 07/03/2017
! configuration :
! $AMRVAC_DIR/setup.pl -d=2
!=====================================================

 &filelist
        base_filename='cv_2d'
        typefilelog='regression_test'
        saveprim=.true.
        autoconvert=.true.
        convert_type='vtuBCCmpi'
        nwauxio=5
 /

 &savelist
        dtsave_log=1.d-3
 /

 &stoplist
        time_max=5.d-2
 /

 &methodlist
        time_stepper=  'threestep'
        flux_scheme=    20*'hll'
        limiter= 20*'cada3'
 /

 &boundlist
        typeboundary_min1=6*'periodic'
        typeboundary_max1=6*'periodic'
        typeboundary_min2=6*'special'
        typeboundary_max2=6*'special'
 /

 &meshlist
        refine_criterion=3
        refine_max_level=3
        w_refine_weight(1)=0.6d0
        w_refine_weight(5)=0.2d0
        w_refine_weight(6)=0.2d0
        refine_threshold=20*0.2d0
        derefine_ratio=20*0.125d0
        block_nx1=10
        block_nx2=10
        domain_nx1=60
        domain_nx2=20
        xprobmin1=0.d0
        xprobmax1=3.d0
        xprobmin2=0.d0
        xprobmax2=1.d0
        iprob=1
 /

 &paramlist
        slowsteps=10
        typecourant='maxsum'
        courantpar=0.9d0
        dtdiffpar=0.4d0
 /

 &mhd_list
        mhd_thermal_conduction=.true.
        mhd_viscosity=.true.
        mhd_gravity=.true.
 /
