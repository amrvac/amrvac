!=====================================================
! Project : 3D KH
! Aim     : Kelvin-Helmholtz MHD evolution, 3D setup
! Results :
! Update  : 06/03/2017
! configuration :
! $AMRVAC_DIR/setup.pl -d=3
!=====================================================

 &filelist
        base_filename = 'kh_3D'
        saveprim      = T
 /
        autoconvert   = T

 &savelist
        itsave(1,1)   = 0
        itsave(1,2)   = 0
        ditsave_log   = 10
        ditsave_dat   = 20
 /
        dtsave_dat    = 0.05

 &stoplist
        it_max=80
        wall_time_max=0.005d0
 /
        time_max  = 0.2d0

 &methodlist
        time_stepper   = 'threestep'
        flux_scheme     = 20*'hll'
        limiter  = 20*'cada3'
 /

 &boundlist
        typeboundary_min1 =8*'periodic'
        typeboundary_max1 =8*'periodic'
        typeboundary_min2 =8*'cont'
        typeboundary_max2 =8*'cont'
        typeboundary_min3 =8*'cont'
        typeboundary_max3 =8*'cont'
 /

 &meshlist
        refine_criterion=3
        refine_max_level=3
        w_refine_weight(1)=0.4d0
        w_refine_weight(2)=0.2d0
        w_refine_weight(3)=0.2d0
        w_refine_weight(4)=0.2d0
        refine_threshold=20*0.2d0
        block_nx1=10
        block_nx2=10
        block_nx3=10
        domain_nx1=20
        domain_nx2=40
        domain_nx3=40
        xprobmin1=0.0d0
        xprobmax1=1.0d0
        xprobmin2=-1.0d0
        xprobmax2=1.0d0
        xprobmin3=-1.0d0
        xprobmax3=1.0d0
 /

 &paramlist
       typecourant='maxsum'
       courantpar=0.9d0
       slowsteps=10
 /
