 &filelist
        typefilelog='regression_test'
        base_filename='rip_2.5d'
        saveprim=.true.
        autoconvert=.true.
        convert_type='vtuCCmpi'
        nwauxio=3
 /

 &savelist
   dtsave_log       = 1.d-3
/

 &stoplist
   time_max            = 5.d-2
/

 &methodlist
        time_stepper=  'threestep'
        flux_scheme=    20*'hll'
        limiter= 20*'koren'
        dimsplit=.false.
 /

 &boundlist
        typeboundary_min1 = 8*'cont'
        typeboundary_max1 = 8*'cont'
        typeboundary_min2 = 8*'cont'
        typeboundary_max2 = 8*'cont'
 /

 &meshlist
        refine_criterion=3
        refine_max_level=3
        refine_threshold=20*0.2d0
        derefine_ratio=20*0.125d0
        block_nx1=16
        block_nx2=16
        domain_nx1=64
        domain_nx2=64
        iprob=1
        xprobmin1=-0.2d0
        xprobmax1=0.2d0
        xprobmin2=-0.2d0
        xprobmax2=0.2d0
 /

 &paramlist
        typecourant='maxsum'
        courantpar=0.6d0
 /
 &mhd_list
        typedivbfix='janhunen'
 /
