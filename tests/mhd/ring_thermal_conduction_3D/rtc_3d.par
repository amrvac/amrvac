!setup.pl -d=3

&filelist
  base_filename    = 'rtc_3d'
  typefilelog='regression_test'
  autoconvert      = .true.
  convert_type='vtuBCCmpi'
  saveprim         = .true.
/

 &savelist
   dtsave_log       = 1.d-3
/

 &stoplist
   time_max            = 5.d-2
/

 &methodlist
   time_stepper     = 'onestep'
   flux_scheme       = 20*'nul'
   limiter    = 20*'minmod'
/
 &boundlist
  typeboundary_min1 = 8*'cont'
  typeboundary_max1 = 8*'cont'
  typeboundary_min2 = 8*'cont'
  typeboundary_max2 = 8*'cont'
  typeboundary_min3 = 8*'cont'
  typeboundary_max3 = 8*'cont'
/
 &meshlist
   refine_criterion = 3
   refine_max_level = 1
   block_nx1        = 10
   block_nx2        = 10
   block_nx3        = 10
   domain_nx1       = 100
   domain_nx2       = 100
   domain_nx3       = 100
   xprobmin1       =-1.0d0
   xprobmax1       = 1.0d0
   xprobmin2       =-1.0d0
   xprobmax2       = 1.0d0
   xprobmin3       =-1.0d0
   xprobmax3       = 1.0d0
 /

 &paramlist
 /

 &mhd_list
  mhd_thermal_conduction =T
  Busr=1.d-5
  typedivbfix='none'
 /

 &tc_list
  tc_perpendicular=.false.
  tc_saturate     =.false.
  tc_k_para =0.01d0
 /
