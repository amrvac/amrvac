! setup.pl -d=3
 &filelist
	base_filename='bw_3d'
        autoconvert=.true.
        saveprim=.true.
        nwauxio=3
	convert_type='vtuBCCmpi'
 /

 &savelist
        itsave(1,1)=0
        itsave(1,2)=0
        ditsave_log=20
        dtsave_dat=0.05
 /

 &stoplist
        time_max=0.25d0
 /

 &methodlist
        time_stepper='threestep'
        flux_scheme=20*'hll'
        limiter=20*'koren'
 /

 &boundlist
        typeboundary_min1=8*'cont'
        typeboundary_max1=8*'cont'
        typeboundary_min2=8*'pole'
        typeboundary_max2=8*'pole'
        typeboundary_min3=8*'periodic'
        typeboundary_max3=8*'periodic'
 / 

 &meshlist
        refine_criterion=3
        refine_max_level=3
        w_refine_weight(1)=0.5
        w_refine_weight(5)=0.5
        block_nx1=16
        block_nx2=16
        block_nx3=16
        domain_nx1=32
        domain_nx2=32
        domain_nx3=64
        xprobmin1=1.d0
        xprobmax1=3.d0
        xprobmin2=0.d0
        xprobmax2=0.5d0
        xprobmin3=0.d0
        xprobmax3=1.d0
 /

 &paramlist
        typecourant='maxsum'
        courantpar=0.5d0
 /

 &mhd_list
        Busr=1.d0
 /
