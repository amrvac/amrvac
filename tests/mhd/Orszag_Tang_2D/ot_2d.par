 &filelist
        typefilelog   = 'regression_test'
        base_filename = 'ot_2d'
        autoconvert   = T
        saveprim      = T
        nwauxio       = 2
 /

 &savelist
        dtsave_log    = 1.d-3
 /

 &stoplist
        time_max      = 0.1
 /

 &methodlist
        time_stepper = 'threestep'
        flux_scheme     = 20*'hll'
        limiter  = 20*'cada3'
 /

 &boundlist
        typeboundary_min1  = 6*'periodic'
        typeboundary_min2  = 6*'periodic'
        typeboundary_max1  = 6*'periodic'
        typeboundary_max2  = 6*'periodic'
 /

 &meshlist
        refine_criterion = 3
        refine_max_level = 3
    	refine_threshold = 20*0.4d0
        w_refine_weight(1)=0.5d0
        w_refine_weight(4)=0.5d0
        domain_nx1    = 64
        domain_nx2    = 64
        xprobmin1     = 0.0d0
        xprobmax1     = 1.0d0
        xprobmin2     = 0.0d0
        xprobmax2     = 1.0d0
 /

 &paramlist
        courantpar    = 0.8d0
 /

 &mhd_list
        typedivbfix   = 'linde'
 /
