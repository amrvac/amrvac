!setup.pl -d=3

 &filelist
        base_filename='JetCyl3D'  ! Base file name for dat/vtu output
        saveprim=T
        autoconvert=T
	convert_type='vtuBCCmpi'
        nwauxio=4
/
        snapshotnext=68

 &savelist
        itsave(1,1)=0
        itsave(1,2)=0
        dtsave_log=0.05          ! For the log
        dtsave_dat=0.5d0         ! For dat/vtu output
 /

 &stoplist
        dtmin=1.0d-9
        time_max=60.0d0
 /

 &methodlist
        time_stepper=  'fivestep'
        flux_scheme=20*'hllc'
        limiter=20*'ppm'
        small_values_method='average'
 /

 &boundlist
        typeboundary_min1 = 8*'pole'
        typeboundary_max1 = 8*'cont'
        typeboundary_min2 = 8*'special'
        typeboundary_max2 = 8*'cont'
        typeboundary_min3 = 8*'periodic'
        typeboundary_max3 = 8*'periodic'
 /

 &meshlist
        refine_max_level=2
        w_refine_weight(1)=0.5d0
        w_refine_weight(2)=0.25d0
        w_refine_weight(8)=0.25d0
        domain_nx1=32
        domain_nx2=64
        domain_nx3=32
        block_nx1=16
        block_nx2=16
        block_nx3=16
        xprobmin1=0.0d0
        xprobmax1=40.0d0
        xprobmin2=0.0d0
        xprobmax2=80.0d0
        xprobmin3=0.0d0
        xprobmax3=1.0d0
 /

 &paramlist
        typecourant='maxsum'
        courantpar=0.8d0
        slowsteps=10
 /

 &mhd_list
        mhd_energy = .true.
        typedivbfix = 'linde'
        boundary_divbfix(1)=.false.
        boundary_divbfix(2)=.false.
        boundary_divbfix(3)=.false.
        boundary_divbfix(4)=.false.
        boundary_divbfix(5)=.false.
        boundary_divbfix(6)=.false.
 /

 &usr_list
        Rjet= 1.5d0
        Zjet= 3.0d0
        npower=4.0d0
        apar=5.0d0
        B0=1.0d0
        Bc=0.01d0
        Bazi=1.0d0
        rhojet=1.0d0
        rhocloud=10.0d0
        alfapar=6.0d0
        pjet=2.0d0
 /
