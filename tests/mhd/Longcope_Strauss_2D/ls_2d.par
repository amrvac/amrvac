!$AMRVAC_DIR/setup.pl -d=2

 &filelist
        base_filename='ls_2d'
        typefilelog='regression_test'
        convert_type='vtuBCCmpi'
        saveprim=.true.
    	autoconvert=T
        nwauxio=1
 /

 &savelist
        dtsave_log= 1.d-3
 /

 &stoplist
        time_max= 5.d-2
 /

 &methodlist
        time_stepper=  'threestep'
        flux_scheme=    20*'hll'
        limiter= 20*'mp5'
        small_pressure=1.0d-14
 /

 &boundlist
        typeboundary_min1= 6*'periodic'
        typeboundary_max1= 6*'periodic'
        typeboundary_min2= 6*'periodic'
        typeboundary_max2= 6*'periodic'
 /

 &meshlist
        refine_criterion=3
        refine_max_level=3
        refine_threshold=20*0.5d0
        domain_nx1=64
        domain_nx2=64
        iprob=7
        xprobmin1=0.0d0
        xprobmax1=1.0d0
        xprobmin2=0.0d0
        xprobmax2=1.0d0
 /

 &paramlist
        courantpar=0.5d0
        dtdiffpar=0.5d0
        slowsteps=10
 /
