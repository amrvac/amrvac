!=====================================================
! Project : 2.5D MHD circularly polarised Alfven wave propagation
! Aim     : multi-D non-linear code test, e.g. to investigate convergence
! Results :
! Update  : 08/03/2017
! configuration :
! $AMRVAC_DIR/setup.pl -d=2
!=====================================================

 &filelist
	base_filename = 'aw_2d'
        saveprim=.true.
        autoconvert=.true.
        convert_type='vtuBCCmpi'
 /

 &savelist
        itsave(1,1)  = 0
        itsave(1,2)  = 0
        ditsave_log  = 10
	dtsave_dat    = 0.44721359549995793
 /

 &stoplist
        dtmin        = 1.D-6
        time_max     = 4.4721359549995793
 /

 &methodlist
        time_stepper=  'fivestep'
        flux_scheme=    20*'hll'
        limiter= 20*'mp5'
 /

 &boundlist
        typeboundary_min1=8*'periodic'
        typeboundary_max1=8*'periodic'
        typeboundary_min2=8*'periodic'
        typeboundary_max2=8*'periodic'
 /

 &meshlist
        refine_criterion=3
        refine_max_level=1
        w_refine_weight(7)=0.5d0
        w_refine_weight(8)=0.5d0
        refine_threshold=20*0.2d0
        derefine_ratio=20*0.125d0
        domain_nx1=128
        domain_nx2=64
        xprobmin1=0.d0
        xprobmax1=1.d0
        xprobmin2=0.d0
        xprobmax2=0.5d0
 /

 &paramlist
        slowsteps=10
        typecourant='maxsum'
        courantpar=0.9d0
 /
