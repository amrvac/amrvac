!setup.pl -d=2 
 &filelist
	base_filename='bw_spherical_2D'
        autoconvert=.true.
        saveprim=.true.
        nwauxio=3
	convert_type='vtuBmpi'
 /

 &savelist
        itsave(1,1)=0
        itsave(1,2)=0
        ditsave_log=10
        dtsave_dat=0.05d0
 /

 &stoplist
        time_max=0.15d0
 /
        it_max=1

 &methodlist
        time_stepper='threestep'
        flux_scheme=20*'hll'
        limiter=20*'koren'
 /

 &boundlist
        typeboundary_min1=6*'special'
        typeboundary_max1=6*'special'
        typeboundary_min2=6*'special'
        typeboundary_max2=6*'special'
 / 

 &meshlist
        refine_criterion=3
        refine_max_level=3
        w_refine_weight(1)=0.5
        w_refine_weight(5)=0.5
        block_nx1=16
        block_nx2=16
        domain_nx1=32
        domain_nx2=32
        xprobmin1=1.d0
        xprobmax1=3.d0
        xprobmin2=0.02d0
        xprobmax2=0.48d0
 /

 &paramlist
        typecourant='maxsum'
        courantpar=0.5d0
 /

 &mhd_list
        Busr=1.d0
 /
