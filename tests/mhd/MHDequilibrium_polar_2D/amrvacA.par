!setup.pl -d=2

 &filelist
        saveprim=T
        autoconvert=T
	convert_type='vtuBCCmpi'
        base_filename='Polar2Dcentralstretch'  ! Base file name for dat/vtu output
        typefilelog='special'
        nwauxio=1
/
        nocartesian=.true.

 &savelist
        itsave(1,1)=0
        itsave(1,2)=0
        dtsave_log=0.05          ! For the log
        ditsave_dat=5          ! For dat/vtu output
 /

 &stoplist
        dtmin=1.0d-6
        it_max=10
 /

 &methodlist
        time_stepper=  'threestep'
        flux_scheme=20*'hll'
        limiter=20*'cada3'
        typecurl='central'
 /
        typecurl='Gaussbased'

 &boundlist
        typeboundary_min1 = 6*'pole'
        typeboundary_max1 = 6*'cont'
        typeboundary_min2 = 6*'periodic'
        typeboundary_max2 = 6*'periodic'
 /

 &meshlist
        stretch_dim(1)='symm'
        stretch_dim(2)='symm'
        nstretchedblocks_baselevel(1)=6
        nstretchedblocks_baselevel(2)=10
        qstretch_baselevel(1)=1.03
        qstretch_baselevel(2)=1.03
        refine_max_level=3
        domain_nx1=100
        domain_nx2=100
        block_nx1=10
        block_nx2=10
        xprobmin1=0.0d0
        xprobmax1=2.0d0
        xprobmin2=0.0d0
        xprobmax2=1.0d0
 /

 &paramlist
        typecourant='maxsum'
        courantpar=0.9d0
        slowsteps=10
 /

 &mhd_list
        mhd_energy = .true.
        typedivbfix = 'linde'
 /

       Rjet= 1.5d0
 &usr_list
       Rjet= 3.0d0
       apar=0.5d0
       Bazi=1.0d0
       rhojet=1.0d0
       rhocloud=10.0d0
       pjet=2.0d0
 /
