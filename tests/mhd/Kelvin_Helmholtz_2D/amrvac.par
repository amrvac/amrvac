!=====================================================
! Project : Kelvin-Helmholtz problem
! Aim     : N.C.
! Results : 
! Update  : 
! configuration :
! -d=2
!=====================================================
 
 &filelist
        base_filename='KH2proba'
        convert_type='vtuBCCmpi'
        saveprim=.true.
        autoconvert=.true.
        nwauxio=1
 /
 
 &savelist
        itsave(1,1)=0
        itsave(1,2)=0
        dtsave=0.01d0,0.5d0
 /
 
 &stoplist
        time_max=8.d0
        dtmin=1.0D-9
 /
 
 &methodlist
        time_stepper=  'threestep'
        flux_scheme=    20*'hll'
        typepred1=    20*'hll'
        limiter= 20*'cada3'
 /
 &boundlist
        typeboundary_min1 = 6*'periodic'
        typeboundary_max1 = 6*'periodic'
        typeboundary_min2 = 6*'cont'
        typeboundary_max2 = 6*'cont'
 /
 
 
 &meshlist
        refine_criterion=3
        w_refine_weight(1)=0.4d0
        w_refine_weight(2)=0.3d0
        w_refine_weight(3)=0.3d0
        refine_max_level=3
        refine_threshold=20*0.2d0
        block_nx1=12
        block_nx2=12
        domain_nx1=48
        domain_nx2=48
        xprobmin1=0
        xprobmax1=4.0d0
        xprobmin2=0
        xprobmax2=4.0d0
        iprob=2 
 /
 
 &paramlist
        typecourant='maxsum'
        slowsteps=10
        courantpar=0.8d0
 /
