
 &filelist
        base_filename='ti_2d'
        typefilelog = 'regression_test'
        autoconvert   = .true.
        saveprim      = .true.
        nwauxio       = 1
 /

 &savelist
        dtsave_log   = 1.d-3
 /

 &stoplist
        time_max      = 5.d-2
 /

 &methodlist
        time_stepper   = 'threestep'
        flux_scheme     = 3*'hll'
        limiter  = 3*'cada3'
 /

 &boundlist
        typeboundary_min1=6*'special'
        typeboundary_max1=6*'special'
        typeboundary_min2=6*'special'
        typeboundary_max2=6*'special'
 /

 &meshlist
        refine_criterion=3
        refine_max_level=3
        w_refine_weight(1)=0.4d0
        w_refine_weight(5)=0.3d0
        w_refine_weight(6)=0.3d0
        refine_threshold=3*0.2d0
        derefine_ratio=3*0.1d0
        domain_nx1 = 64
        domain_nx2 = 64
        xprobmin1  = -3.0d0
        xprobmax1  = 3.0d0
        xprobmin2  = -3.0d0
        xprobmax2  = 3.0d0
 /

 &paramlist
        typecourant='maxsum'
        courantpar=0.9d0
        slowsteps=50
 /

 &mhd_list
       mhd_eta=1.d-4
 /
