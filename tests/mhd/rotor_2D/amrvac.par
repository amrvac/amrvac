 &filelist
        base_filename='rotor_2d'
        autoconvert=.true.
        saveprim=.true.
        nwauxio=3
 /

 &savelist
        itsave(1,1)=0
        itsave(1,2)=0
        ditsave_log=10
        dtsave_dat=0.1d0
 /

 &stoplist
        time_max=0.5d0
 /

 &methodlist
        time_stepper=  'threestep'
        flux_scheme=    20*'hll'
        limiter= 20*'cada3'
 /

 &boundlist
        typeboundary_min1=6*'periodic'
        typeboundary_max1=6*'periodic'
        typeboundary_min2=6*'periodic'
        typeboundary_max2=6*'periodic'
 /

 &meshlist
        refine_criterion=3
        refine_max_level=3
        w_refine_weight(1)=0.8
        w_refine_weight(5)=0.1
        w_refine_weight(6)=0.1
        refine_threshold=20*0.1d0
        domain_nx1=32
        domain_nx2=32
        xprobmin1=0.d0
        xprobmax1=1.d0
        xprobmin2=0.d0
        xprobmax2=1.d0
 /

 &paramlist
        courantpar=0.8d0
        slowsteps=10
 /

 &mhd_list
        mhd_gamma=1.4d0
 /
