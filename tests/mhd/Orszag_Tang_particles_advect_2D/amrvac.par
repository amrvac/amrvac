 ! setup.pl -d=2
 &filelist
        autoconvert   = T
        saveprim      = T
        nwauxio       = 2
        base_filename = 'ot_2d'
        convert_type  = 'vtuBmpi'
 /
        restart_from_file='ot_2d0004.dat'
        snapshotnext=5

 &savelist
        itsave(1,1)   = 0
        itsave(1,2)   = 0
        ditsave_log   = 20
        dtsave_dat    = 0.02d0
 /

 &stoplist
        time_max      = 0.1d0
 /

 &methodlist
        time_stepper = 'threestep'
        flux_scheme     = 20*'hll'
        limiter  = 20*'cada3'
 /

 &boundlist
        typeboundary_min1  = 6*'periodic'
        typeboundary_min2  = 6*'periodic'
        typeboundary_max1  = 6*'periodic'
        typeboundary_max2  = 6*'periodic'
 /

 &meshlist
        refine_criterion = 3
        refine_max_level = 3
    	refine_threshold = 20*0.4d0
        w_refine_weight(1)=0.5d0
        w_refine_weight(4)=0.5d0
        domain_nx1    = 64
        domain_nx2    = 64
        xprobmin1     = 0.0d0
        xprobmax1     = 1.0d0
        xprobmin2     = 0.0d0
        xprobmax2     = 1.0d0
 /

 &paramlist
        courantpar    = 0.8d0
 /

 &mhd_list
        typedivbfix   = 'linde'
        mhd_particles = .true.
 /

 &particles_list
        physics_type_particles='advect'
        num_particles=1
        dtsave_particles=0.02d0
        npayload=1
 /
