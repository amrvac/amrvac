!setup.pl -d=2

&filelist
  base_filename    = 'rtc_2d'
  typefilelog='regression_test'
  autoconvert      = .true.
  convert_type     = 'vtuBCCmpi'
  saveprim         = .true.
/

 &savelist
   dtsave_log = 1.d-3
/

 &stoplist
   time_max = 5.d-2
/

 &methodlist
   time_stepper     = 'twostep'
   flux_scheme       = 20*'hll'
   limiter    = 20*'cada3'
   fix_small_values=.true.
/
 &boundlist
  typeboundary_min1 = 6*'cont'
  typeboundary_max1 = 6*'cont'
  typeboundary_min2 = 6*'cont'
  typeboundary_max2 = 6*'cont'
/
 &meshlist
   refine_max_level = 4
   block_nx1        = 10
   block_nx2        = 10
   domain_nx1       = 20
   domain_nx2       = 20
   xprobmin1       =-1.0d0
   xprobmax1       = 1.0d0
   xprobmin2       =-1.0d0
   xprobmax2       = 1.0d0
   w_refine_weight(4) = 1.d0
   itfixgrid=0
 /

 &paramlist
  courantpar=0.1d0
 /
 &mhd_list
  mhd_thermal_conduction =T
  Busr=1.d-1
  typedivbfix='linde'
 /
 &tc_list
  tc_perpendicular=.false.
  tc_saturate     =.true.
  tc_k_para =0.01d0
 /
