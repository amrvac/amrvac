!=====================================================
! Project : Double Gem 
! Aim     : resistive to Hall MHD, 2.5D setup
! Results :
! Update  : 1/09/2015
! configuration :
! $AMRVAC_DIR/setup.pl -d=2
!=====================================================

 &filelist
        base_filename='dgem_2d'
        typefilelog='regression_test'
        autoconvert=.true.
        saveprim=.true.
        convert_type='vtuBmpi'
        nwauxio=3
 /

 &savelist
        dtsave_log=1.d-3
 /

 &stoplist
        time_max=5.d-2
 /

 &methodlist
        time_stepper='threestep'
        flux_scheme=20*'hll'
        limiter= 20*'cada3'
 /

 &boundlist
        typeboundary_min1 = 8*'periodic'
        typeboundary_max1 = 8*'periodic'
        typeboundary_min2 = 8*'periodic'
        typeboundary_max2 = 8*'periodic'
 /

 &meshlist
        refine_criterion=3
        refine_max_level=4
        refine_threshold=20*0.2d0
        derefine_ratio=20*0.1d0
        block_nx1=10
        block_nx2=10
        domain_nx1=30
        domain_nx2=30
        xprobmin1=-15.0d0
        xprobmax1=15.d0
        xprobmin2=-15.0d0
        xprobmax2=15.d0
        iprob=1
 /

 &paramlist
        slowsteps=10
        typecourant='maxsum'
        courantpar=0.6d0
        dtdiffpar=0.4d0
 /

 &mhd_list
        typedivbfix='glm'
 /
