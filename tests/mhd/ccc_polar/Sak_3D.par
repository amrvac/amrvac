!setup.pl -d=3

 &filelist
        saveprim=T
        autoconvert=T
	convert_type='vtuBCCmpi'
        base_filename='SakPolar3D'  ! Base file name for dat/vtu output
        typefilelog='special'
        nwauxio=3
/

 &savelist
        itsave(1,1)=0
        itsave(1,2)=0
        dtsave_log=0.05          ! For the log
        dtsave_dat=0.05          ! For dat/vtu output
 /

 &stoplist
        dtmin=1.0d-6
        it_max=1
 /

 &methodlist
        time_stepper=  'threestep'
        flux_scheme=20*'hll'
        limiter=20*'woodward'

 /

 &boundlist
        typeboundary_min1 = 8*'pole'
        typeboundary_max1 = 8*'cont'
        typeboundary_min2 = 8*'periodic'
        typeboundary_max2 = 8*'periodic'
        typeboundary_min3 = 8*'periodic'
        typeboundary_max3 = 8*'periodic'
 /

 &meshlist
        refine_max_level=3
        domain_nx1=100
        domain_nx2=100
        domain_nx3=100
        block_nx1=10
        block_nx2=10
        block_nx3=10
        xprobmin1=0.0d0
        xprobmax1=2.0d0
        xprobmin2=0.0d0
        xprobmax2=1.0d0
        xprobmin3=0.0d0
        xprobmax3=2.0d0
 /

 &paramlist
        typecourant='maxsum'
        courantpar=0.9d0
        slowsteps=10
 /

 &mhd_list
        mhd_energy = .true.
        typedivbfix = 'linde'
 /

 &usr_list
        equilibrium_version='Sakanaka'
        drat=0.05d0
        beta1=0.05d0
        qfac1=1.2d0
        Rvacs=1.0d0
        invbext=0.0d0
 /
