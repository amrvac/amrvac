!=====================================================
! Project : Euhforia low_res_test_run
! Aim     : MHD evolution solar wind, 3D setup
! Results :
! Update  : 30/08/2019
! configuration :
! $AMRVAC_DIR/setup.pl -d=3 -phys=MHD -arch=default
! make -j 4
! mpirun -np 4 ./amrvac -i example.par
! More information on normvar(i) used can be found in usrpar.t file.
! WARNING: IF BASEFILENAME IS TOO LONG, IT WILL CRASH WITH FOLLOWING ERROR:
! At line 998 of file convert.f // Fortran runtime error: End of record

!=====================================================
 &testlist
 /

 &filelist
        autoconvert   = .true.
        saveprim      = .true. 
        base_filename ='./output_rotation/icarus_cme'
        convert_type  = 'vtuBCCmpi'
        slice_type    = 'csv'
        nocartesian   = .true.
        nwauxio       = 3
        

/

 &savelist
        itsave(1,1)   = 0
        itsave(1,2)   = 0
        tsavestart(2) = 336.0
        dtsave_dat    = 3.0
/


 &stoplist
        time_max      = 576.0d0
 /

 &methodlist
        time_stepper      = 'twostep'
        flux_scheme       = 20*'tvdlf'
        !typepred1        = 20*'hancock'
        limiter           = 20*'woodward'
        dimsplit          = .false.
        check_small_values = .false.
        !fix_small_values = .true.
        small_pressure    = 1.0d-18
        small_density     = 1.0d-14
        small_values_method = 'replace'
        small_values_daverage = 8
 /


 &mhd_list
       typedivbfix = 'linde'
       divbdiff = 0.9
       mhd_rotating_frame = .true.
       mhd_n_tracer = 1
 /


 &boundlist
        typeboundary_min1 =8*'special'
        typeboundary_max1 =8*'cont'
        typeboundary_min2 =8*'symm'
        typeboundary_max2 =8*'symm'
        typeboundary_min3 =8*'periodic'
        typeboundary_max3 =8*'periodic'
        save_physical_boundary = .true.
 /

 &meshlist
!        stretch_dim(1)='uni'
!        stretch_uncentered = .false.
        refine_criterion=0
        refine_max_level = 2
        nbufferx1=0
        nbufferx2=0
        nbufferx3=0
        block_nx1=6
        block_nx2=8
        block_nx3=12
        domain_nx1= 60
        domain_nx2= 32
        domain_nx3= 96
        xprobmin1=21.5
        xprobmax1=432.5
        xprobmin2=8.14606741573d-2
        xprobmax2=4.18539325843d-1
        xprobmin3=0.0d0
        xprobmax3=1.0d0
 /


 &paramlist
        typecourant='maxsum'
        courantpar=0.9d0
        slowsteps=10
/

&rotating_frame_list
        omega_frame= 0.010692d0
/ 

&icarus_list
        timeseries_file = 'pressure_runs_'
        amr_criterion = 'tracing'
/
