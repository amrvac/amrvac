 &filelist
        base_filename='solar_atm_ffhdver'
        typefilelog='regression_test'
        saveprim=.true.
        autoconvert=T
        convert_type='vtuBCCmpi'
        nwauxio=1
 /

 &savelist
        ditsave_log=1
 /
        itsave(1,1)=0
        itsave(1,2)=0
        dtsave_log=0.1d0
        dtsave_dat=1.0d0

 &stoplist
        dtmin=1.d-7
        it_max=10
 /
        time_max=300.d0

 &methodlist
        time_stepper='threestep'
        flux_scheme=20*'hll'
        limiter=20*'vanleer'
 /

 &boundlist
        typeboundary_min1 = 3*'cont'
        typeboundary_max1 = 3*'cont'
        typeboundary_min2 = 3*'special'
        typeboundary_max2 = 3*'special'
 /

 &meshlist
        block_nx1=16
        block_nx2=16
        domain_nx1=960
        domain_nx2=768
        xprobmin1=-5.d0
        xprobmax1=5.d0
        xprobmin2=0.d0
        xprobmax2=8.d0
 /

 &paramlist
        typecourant='maxsum'
        courantpar=0.6d0
        slowsteps=10
 /

 &ffhd_list
        ffhd_hyperbolic_thermal_conduction=T
        ffhd_radiative_cooling=T
        ffhd_gravity=T
        B0field=.true.
        Busr=10.d0
 /

 &rc_list
        ncool=10000
        coolcurve='JCcorona'
        coolmethod='exact'
        Tfix=.true.
        tlow=0.008d0
 /
