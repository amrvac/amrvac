! setup.pl -d=2
 &filelist
	base_filename='circle_in_circle'
        autoconvert=.true.
	convert_type='vtuBmpi'
        typefilelog='special'

 /
	convert_type='vtuBCCmpi'

 &savelist
        itsave(1,1)=0
        itsave(1,2)=0
        ditsave_log=100
        dtsave_dat=0.05d0
        time_between_print=600.0d0
 /

 &stoplist
        time_max=0.5d0
 /

 &methodlist
        time_stepper='threestep'
        flux_scheme=20*'hll'
        limiter=20*'koren'
 /

 &boundlist
        typeboundary_min1='pole'
        typeboundary_max1='cont'
        typeboundary_min2='periodic'
        typeboundary_max2='periodic'
 / 

 &meshlist
        refine_criterion=3
        refine_max_level=4
        block_nx1=10
        block_nx2=10
        domain_nx1=100
        domain_nx2=100
        xprobmin1=0.d0
        xprobmax1=1.d0
        xprobmin2=0.d0
        xprobmax2=1.d0
        iprob=2
 /

 &paramlist
        typecourant='maxsum'
        courantpar=0.4d0
 /
 
  &rho_list
        rho_v = -1.0, 2.0
 /

