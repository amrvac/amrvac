 &filelist
        base_filename='analytic'
        typefilelog='special'
    	convert_type='vtuBCCmpi'
        autoconvert=T
/

 &savelist
        dtsave_log=1.0d-1
        ! dtsave_dat=1.0d-1
 /

 &stoplist
        time_max=1.0d0
 /

 &methodlist
        time_stepper = 'threestep'
        flux_scheme = 'tvdlf'
        limiter='cada'
 /

 &boundlist
        typeboundary_min1 = 'periodic'
        typeboundary_max1 = 'periodic'
 /

 &meshlist
        refine_max_level=1
        refine_threshold=20*0.1d0
        block_nx1=16
        domain_nx1=128
        iprob=4
        xprobmin1=0.0d0
        xprobmax1=1.0d0
 /

 &paramlist
       courantpar=0.5
 /

 &rho_list
        rho_v = 1.0
 /
