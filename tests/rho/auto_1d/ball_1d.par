!=====================================================
!> Project : Advection test
!>   Doing discontinuous 1D ball on periodic domain
!> $AMRVAC_DIR/setup.pl -d=11 -g=16 -p=rho
!=====================================================

 &filelist
        base_filename='ball_1d'
        typefilelog='regression_test'
        primnames='rho'
    	convert_type='vtuBCCmpi'
        autoconvert=T
/

 &savelist
        dtsave(1)=1.0d-2
 /

 &stoplist
        time_max=0.1d0
 /

 &methodlist
        w_names=       'rho'
        fileheadout=  'ball_1d'
 /

 &boundlist
        nghostcells=   3
        typeboundary_min1 = 'periodic'
        typeboundary_max1 = 'periodic'
 /

 &meshlist
        refine_max_level=4
        refine_threshold=20*0.1d0
        block_nx1=10
        domain_nx1=50
        iprob=6
        xprobmin1=0.0d0
        xprobmax1=1.0d0
 /

 &paramlist
       courantpar=0.60
 /

 &rho_list
        rho_v = 1.0
 /
