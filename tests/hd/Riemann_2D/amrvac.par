!setup.pl -d=2

 &filelist
        saveprim=.true.
        autoconvert=.true.
	convert_type='vtuBCCmpi'
        base_filename='rm_2d'  ! Base file name for dat/vtu output
/

 &savelist
        itsave(1,1)=0
        itsave(1,2)=0
        dtsave_log=0.05          ! For the log
        dtsave_dat=0.05          ! For dat/vtu output
 /

 &stoplist
        dtmin=1.0d-6
        time_max=5.0d0
 /

 &methodlist
        time_stepper=  'threestep'
        flux_scheme=20*'hllc'
        limiter='cada3'

 /

 &boundlist
        typeboundary_min1 = 4*'cont'
        typeboundary_max1 = 4*'cont'
        typeboundary_min2 = 4*'cont'
        typeboundary_max2 = 4*'cont'
 /

 &meshlist
        refine_criterion=3
        refine_max_level=2
        domain_nx1=128
        domain_nx2=128
        xprobmin1=0.0d0
        xprobmax1=1.0d0
        xprobmin2=0.0d0
        xprobmax2=1.0d0
 /

 &paramlist
        typecourant='maxsum'
        courantpar=0.9d0
        slowsteps=10
 /
