!setup.pl -d=1

 &filelist
        base_filename='rm_1d'  ! Base file name for dat/vtu output
        typefilelog='regression_test'
        saveprim=.true.
        autoconvert=.true.
	convert_type='vtuBCCmpi'
/

 &savelist
        dtsave_log=1.d-2
 /

 &stoplist
        time_max=5.d-1
 /

 &methodlist
        time_stepper=  'threestep'
        flux_scheme=20*'hllc'
        limiter='cada3'
 /

 &boundlist
        typeboundary_min1 = 3*'cont'
        typeboundary_max1 = 3*'cont'
 /

 &meshlist
        refine_criterion=3
        refine_max_level=3
        domain_nx1=64
        xprobmin1=0.0d0
        xprobmax1=1.0d0
        iprob=1
 /

 &paramlist
        typecourant='maxsum'
        courantpar=0.9d0
        slowsteps=10
 /
