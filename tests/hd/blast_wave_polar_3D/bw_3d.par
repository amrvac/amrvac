!setup.pl -d=3 
 &filelist
	base_filename='bw_3d'
        typefilelog='regression_test'
        autoconvert=.true.
        saveprim=.true.
        nwauxio=1
	convert_type='vtuBCCmpi'
 /

 &savelist
        dtsave_log=1.d-3
 /

 &stoplist
        time_max=3.d-2
 /

 &methodlist
        time_stepper='threestep'
        flux_scheme=20*'hllc'
        limiter=20*'koren'
 /

 &boundlist
        typeboundary_min1=5*'pole'
        typeboundary_max1=5*'cont'
        typeboundary_min2=5*'periodic'
        typeboundary_max2=5*'periodic'
        typeboundary_min3=5*'cont'
        typeboundary_max3=5*'cont'
 / 

 &meshlist
        refine_criterion=3
        refine_max_level=3
        w_refine_weight(1)=0.5
        w_refine_weight(5)=0.5
        block_nx1=8
        block_nx2=8
        block_nx3=8
        domain_nx1=16
        domain_nx2=16
        domain_nx3=8
        xprobmin1=0.d0
        xprobmax1=2.d0
        xprobmin2=0.d0
        xprobmax2=1.d0
        xprobmin3=-1.d0
        xprobmax3=1.d0
 /

 &paramlist
        typecourant='maxsum'
        courantpar=0.5d0
 /
