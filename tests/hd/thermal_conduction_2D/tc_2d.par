!setup.pl -d=2
  &filelist
    typefilelog='regression_test'
    base_filename    = 'tc_2d'
    autoconvert      = .true.
    convert_type     = 'vtuBCCmpi'
    saveprim         = .true.
  /
  
  &savelist
     dtsave_log      = 1.d-3
  /
  
  &stoplist
     time_max        = 5.d-2
  /
  
  &methodlist
     time_stepper  = 'threestep'
     flux_scheme       = 20*'hllc'
     limiter    = 20*'cada3'
  /   

  &boundlist
    typeboundary_min1 = 4*'cont'
    typeboundary_max1 = 4*'cont'
    typeboundary_min2 = 4*'cont'
    typeboundary_max2 = 4*'cont'
  /

  &meshlist
     refine_criterion= 3
     refine_max_level= 3
     block_nx1       = 8
     block_nx2       = 8
     domain_nx1      = 32
     domain_nx2      = 32
     xprobmin1       =-1.0d0
     xprobmax1       = 1.0d0
     xprobmin2       =-1.0d0
     xprobmax2       = 1.0d0
  /
    
  &paramlist
    slowsteps        = 10
    courantpar       = 0.6d0
  /
  
  &hd_list
    hd_thermal_conduction =T
  /

  &tc_list
    tc_saturate=.false.
  /
   
