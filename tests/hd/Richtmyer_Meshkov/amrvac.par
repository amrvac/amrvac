
 &filelist
	        saveprim=.true.
        autoconvert=.true.
	base_filename= '/scratch/leuven/304/vsc30438/RMDust/rmDust'
        restart_from_file= '/scratch/leuven/304/vsc30438/RMDust/rmDust'
	convert_type='vtuBCCmpi'
	snapshotini=365
	snapshotnext=366
	!w_write=.T.,3*.F.
	nwauxio=1
 /
	convert=.true.
 /

 &savelist
        itsave(1,1)=0
        itsave(1,2)=0
	ditsave_log=20
        dtsave_dat=0.005
 /
        ditsave_log=1

 &stoplist
        !dtmin=1.0d-6
        time_max=3.0d0
 /

 &methodlist
        time_integrator=  'ssprk54'
        flux_scheme=20*'tvdlf'
        limiter=20*'woodward'

	dustmethod='sticking'
	dustzero=.true.
        smallrhod=1.0d-3
        dimsplit=.false.
	strictzero = .T.
 /

 &boundlist
        typeboundary=16*'cont',
        16*'cont',
	'symm','symm','asymm','symm',4*'symm',4*'symm',4*'asymm',
        'symm','symm','asymm','symm',4*'symm',4*'symm',4*'asymm'
 /

 &meshlist
        refine_criterion=3
        refine_max_level=7
	w_for_refine(17)=3
	w_for_refine(1)=1
	w_for_refine(2)=5
	w_for_refine(3)=8
	w_refine_weight(1)=0.6d0
	w_refine_weight(2)=0.1d0
	w_refine_weight(3)=0.3d0
	refine_threshold=20*0.05
	derefine_ratio=20*0.125d0
        domain_nx1=120
        domain_nx2=24
        xprobmin1=0.0d0
        xprobmax1=5.0d0
        xprobmin2=0.0d0
        xprobmax2=1.0d0
 /

 &paramlist
        courantpar=1.5d0
 /
        slowsteps=10
