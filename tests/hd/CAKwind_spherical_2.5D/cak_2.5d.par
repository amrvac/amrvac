! regression test is only over half the meridional plane

&filelist
  typefilelog   = 'regression_test'
  base_filename = 'cak2.5d'
  saveprim      = .true.
  autoconvert   = .true.
  convert_type  = 'vtuBCCmpi'
/

&savelist
  dtsave_log  = 1d-2
/

  time_max = 0.3d0
&stoplist
  time_max = 0.05d0
/

&methodlist
  time_stepper = 'twostep'
  flux_scheme  = 'tvdlf'
  limiter      = 'vanleer'
/

&boundlist
  ! rho, mom1, mom2, mom3
  typeboundary_min1 = 4*'special'
  typeboundary_max1 = 4*'cont'
  typeboundary_min2 = 'symm','symm','asymm','asymm'
  typeboundary_max2 = 'symm','symm','asymm','symm'
/

&meshlist
  domain_nx1         = 200
  domain_nx2         = 60
  block_nx1          = 50
  block_nx2          = 30
  xprobmin1          = 1.0d0
  xprobmax1          = 10.0d0
  xprobmin2          = 0.0d0
  xprobmax2          = 0.25d0
  stretch_dim(1)     = 'uni'
  qstretch_baselevel = 1.022
/

&paramlist
  courantpar = 0.3d0 
/

&hd_list
  hd_gravity = .true.
  hd_energy  = .false.
  hd_gamma   = 1.0d0
  hd_cak_force = .true.
/

&cak_list
  cak_alpha   = 0.65d0
  gayley_qbar = 2000.0d0
  cak_vector_force = .true.
  nthetaray = 6
  nphiray   = 6
/

&star_list
  mstar_sol    = 50.0d0
  rstar_sol    = 20.0d0
  twind_cgs    = 4.0d4
  rhobound_cgs = 2.0d-11
  beta         = 0.5d0
  Wrot         = 0.5d0
/
