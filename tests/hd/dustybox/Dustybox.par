
 &filelist
        base_filename='./output/DustyB'
	autoconvert=.true.
	saveprim=.true.
 /
        restart_from_file='datamr/DUSTYSEDOV/D2000'
        snapshotnext=11
        convert=.true.
        convert_type='vtu'
 /
        nwauxio=2
 

 &savelist
        itsave(1,1)=0
        itsave(1,2)=0
        ditsave_log=1
        !dtsave_log=0.00001
	dtsave_dat=10.0d0
 /

 &stoplist
        dtmin=1.d-30
        time_max=1.0d0
 /
        it_max=1000

 &methodlist
        time_stepper=  'twostep'
        flux_scheme=    20*'tvdlf'
        limiter= 20*'woodward'
        dimsplit=.false.
	small_density  = 1.0d-12
        small_pressure    = 1.0d-12
 /

 &boundlist
        typeboundary=	 11*'periodic',
                 11*'periodic'
 /

 &meshlist
        refine_criterion=3
        !        !        !        !        !w_refine_weight(1)=1.0d0
        !w_refine_weight(2)=0.1d0
        !w_refine_weight(3)=0.1d0
        refine_max_level=1
        nbufferx1=0
        refine_threshold=20*0.2d0
        derefine_ratio=20*0.1d0
        block_nx1=8
        domain_nx1=2000
        xprobmin1=-1.0d0
        xprobmax1=1.0d0
        !iprob=4
 /

 &paramlist
        !dtpar=5.0d-5
	typecourant='maxsum'
        courantpar=0.2d0
        slowsteps=0
 /

 &hd_list
        hd_dust = .true.
 /

 &dust_list
        dust_n_species     = 4
        dust_method        = 'sticking'
        dust_small_to_zero = .true.
        dust_min_rho = 1.0d-12
        gas_mu = 1.0d0
 /
