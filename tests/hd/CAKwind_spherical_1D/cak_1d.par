&filelist
  base_filename = 'cak1d'
  typefilelog   = 'regression_test'
/

&savelist
  dtsave_log = 1d-2
/

&stoplist
  time_max = 1.0d0
/

&methodlist
  time_stepper = 'twostep'
  flux_scheme  = 'tvdlf'
  limiter      = 'vanleer'
/

&boundlist
  typeboundary_min1 = 2*'special'
  typeboundary_max1 = 2*'special'
/

&meshlist
  domain_nx1         = 320
  block_nx1          = 80
  xprobmin1          = 1.0d0
  xprobmax1          = 10.0d0
  stretch_dim(1)     = 'uni'
  qstretch_baselevel = 1.015
/

&paramlist
  courantpar = 0.3d0
/

&hd_list
  hd_gravity = .true.
  hd_energy  = .false.
  hd_gamma   = 1.0d0
  hd_cak_force = .true.
/

&cak_list
  cak_1d_force = .true.
/

&star_list
  mstar_sol    = 50.0d0
  rstar_sol    = 20.0d0
  twind_cgs    = 4.0d4
  rhobound_cgs = 2.0d-11
  beta         = 0.5d0
/
