!=================================================
! Project : 1-D CAK wind
!
! Aim     : (mainly) serves to make a relaxed wind
!           for input in other wind models
!
! Config  : setup.pl -d=1
!=================================================

&filelist
  base_filename = 'test/cak'
  saveprim      = .true.
  convert_type  = 'oneblock'
  level_io      = 1
/

&savelist
  itsave(1,1)  = 0
  itsave(1,2)  = 0
  ditsave_log  = 1000
  dtsave_dat   = 1.0d-1
/

&stoplist
  dtmin    = 1.0d-12
  time_max = 1.0d0
/

&methodlist
  time_stepper = 'threestep'
  flux_scheme  = 'tvdlf'
  limiter      = 'minmod'
/

&boundlist
  typeboundary_min1 = 2*'special'
  typeboundary_max1 = 2*'cont'
/

&meshlist
  domain_nx1         = 320
  block_nx1          = 80
  xprobmin1          = 1.0d0
  xprobmax1          = 10.0d0
  stretch_dim(1)     = 'uni'
  qstretch_baselevel = 1.015
/

&paramlist
  courantpar = 0.3d0
/

&hd_list
  hd_gravity = .true.
  hd_energy  = .false.
  hd_gamma   = 1.0d0
  hd_cak_force = .true.
/

&cak_list
  cak_alpha    = 0.65d0
  gayley_qbar  = 2000.0d0
  gayley_q0    = 2000.0d0 
  cak_1d_force = .true.
  cak_1d_opt   = 1
/

&star_list
  mstar_sol    = 50.0d0
  rstar_sol    = 20.0d0
  twind_cgs    = 4.0d4
  rhobound_cgs = 2.0d-11
  beta         = 0.5d0
/
