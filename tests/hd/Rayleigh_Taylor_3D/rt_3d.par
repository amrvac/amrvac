!setup.pl -d=3

&filelist
  typefilelog      = 'regression_test'
  base_filename    = 'rt_3d'
  autoconvert      = .true.
  convert_type     = 'vtuBCCmpi'
  saveprim         = .true.
/

 &savelist
   dtsave_log       = 1.d-3
/

 &stoplist
   time_max            = 5.d-2
/

 &methodlist
   time_stepper     = 'threestep'
   flux_scheme       = 20*'hllc'
   limiter    = 20*'cada3'
/

 &boundlist
  typeboundary_min1 = 5*'periodic'
  typeboundary_max1 = 5*'periodic'
  typeboundary_min2 = 'symm','symm','asymm','symm','symm'
  typeboundary_max2 = 'symm','symm','asymm','symm','symm'
  typeboundary_min3 = 5*'periodic'
  typeboundary_max3 = 5*'periodic'
/

 &meshlist
   refine_criterion   = 3
   refine_max_level          = 3
   block_nx1        = 4
   block_nx2        = 4
   block_nx3        = 4
   domain_nx1         = 8
   domain_nx2         = 8
   domain_nx3         = 8
   xprobmin1       = 0.0d0
   xprobmax1       = 1.0d0
   xprobmin2       = 0.0d0
   xprobmax2       = 1.0d0
   xprobmin3       = 0.0d0
   xprobmax3       = 1.0d0
 /

 &paramlist
  slowsteps        = 10
 /

 &hd_list
  hd_gravity = .true.
 /
