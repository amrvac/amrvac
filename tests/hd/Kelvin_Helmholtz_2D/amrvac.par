 !$AMRVAC_DIR/setup.pl -d=2
 &filelist
   base_filename    = 'kh_2d'
   autoconvert      = T
   convert_type     = 'vtuBmpi'
   saveprim         = T
 /

 &savelist
   itsave(1,1)     = 0
   itsave(1,2)     = 0
   dtsave_log       = 1.d-1
   dtsave_dat       = 2.d-1
 /

 &stoplist
   time_max=3.0d0
 /

 &methodlist
   time_stepper = 'threestep'
   flux_scheme     = 20*'hllc'
   limiter         = 20*'cada3'
 /

 &boundlist
   typeboundary_min1 = 4*'periodic'
   typeboundary_max1 = 4*'periodic'
   typeboundary_min2 = 4*'periodic'
   typeboundary_max2 = 4*'periodic'
 /

 &meshlist
   refine_max_level   = 3
   block_nx1          = 10
   block_nx2          = 10
   domain_nx1         = 50
   domain_nx2         = 50
   xprobmin1       = 0.0d0
   xprobmax1       = 1.0d0
   xprobmin2       = 0.0d0
   xprobmax2       = 1.0d0
   iprob=1
 /
  
 &paramlist
   slowsteps        = 10
   courantpar       = 1.d0
   typecourant      = 'maxsum'
 /
