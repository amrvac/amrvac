! setup.pl -d=2
 &filelist
        typefilelog='regression_test'
        base_filename='bw_2d'
        autoconvert=.true.
        saveprim=.true.
        nwauxio=1
	convert_type='vtuBCCmpi'
 /

 &savelist
        dtsave_log       = 1.d-3
 /

 &stoplist
        time_max            = 5.d-2
 /

 &methodlist
        time_stepper='threestep'
        flux_scheme=20*'hllc'
        limiter=20*'koren'
 /

 &boundlist
        typeboundary_min1=4*'cont'
        typeboundary_max1=4*'cont'
        typeboundary_min2=4*'cont'
        typeboundary_max2=4*'cont'
 / 

 &meshlist
        refine_criterion=3
        refine_max_level=3
        w_refine_weight(1)=0.5
        w_refine_weight(4)=0.5
        block_nx1=16
        block_nx2=16
        domain_nx1=32
        domain_nx2=32
        xprobmin1=0.d0
        xprobmax1=2.d0
        xprobmin2=-1.d0
        xprobmax2=1.d0
 /

 &paramlist
        typecourant='maxsum'
        courantpar=0.5d0
 /
