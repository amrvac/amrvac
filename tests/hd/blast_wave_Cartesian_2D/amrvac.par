!setup.pl -d=2
 &filelist
        base_filename='bw_2d'
        saveprim=.true.
        convert_type='vtuBCCmpi'
        autoconvert=.true.
        nwauxio=1
 /

 &savelist
        itsave(1,1)=0
        itsave(1,2)=0
        ditsave_log=1
        dtsave_dat=0.05d0
 /

 &stoplist
        time_max=0.25d0
/

 &methodlist
        time_stepper=  'threestep'
        flux_scheme=    20*'hllc'
        limiter= 20*'koren'
 /

 &boundlist
        typeboundary_min1=4*'cont'
        typeboundary_max1=4*'cont'
        typeboundary_min2=4*'cont'
        typeboundary_max2=4*'cont'
 /

 &meshlist
        refine_criterion=3
        refine_max_level=3
        w_refine_weight(1)=0.5d0
        w_refine_weight(4)=0.5d0
        refine_threshold=20*0.2d0
        block_nx1=16
        block_nx2=16
        domain_nx1=32
        domain_nx2=32
        iprob=1 
        xprobmin1=0.d0
        xprobmax1=2.d0
        xprobmin2=0.d0
        xprobmax2=2.d0
 /

 &paramlist
        typecourant='maxsum'
        courantpar=0.5d0
 /
