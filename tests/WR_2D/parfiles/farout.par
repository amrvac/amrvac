&filelist
  base_filename='farout_'
  autoconvert      = T
  convert_type = 'vtuBCCmpi'
  saveprim         = F
/

&stoplist
   time_max = 50.d0
/

&meshlist
   domain_nx1         = 256
   domain_nx2         = 64
   block_nx1          = 8
   block_nx2          = 8
   xprobmin1      = 1.d0
   xprobmax1       = 11.d0
   xprobmin2      = -1.d0
   xprobmax2       = 1.d0
   refine_threshold   = 20*0.5d0
   derefine_ratio     = 20*1.d0/2.d0
   ditregrid = 1
/

