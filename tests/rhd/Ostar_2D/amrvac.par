&testlist
  teststr=''
/

&filelist
  base_filename = 'output/O_2D_'
  autoconvert = T
  convert_type = 'vtuBCCmpi'
  saveprim = F
/

 &savelist
   itsave(1,1) = 0
   itsave(1,2) = 0
   dtsave_dat = 1.d0
   dtsave_log = 1.d0 
   itsave(1,5) = 0
   ditsave_custom = 50
/

 &stoplist
   time_max = 2000.d0
   dtmin = 1.0d-9
/

 &methodlist
   time_stepper = 'onestep'
   time_integrator = 'IMEX_Euler'
   flux_scheme = 20*'hll'
   limiter = 20*'minmod'
   source_split_usr = .false.
   typesourcesplit = 'sfs'
   check_small_values = .true.
   small_values_method = 'replace'
   small_pressure = 1.d-18 
   small_density = 1.d-10 
/

&boundlist
  typeboundary_min1 = 5*'special'
  typeboundary_max1 = 4*'noinflow','special'
  typeboundary_min2 = 5*'periodic'
  typeboundary_max2 = 5*'periodic'
  internalboundary = F
/

 &meshlist
   refine_max_level = 4
   domain_nx1 = 256
   domain_nx2 = 32
   block_nx1 = 8
   block_nx2 = 8
   xprobmin1 = 1.d0
   xprobmax1 = 6.d0
   xprobmin2 = -0.25d0
   xprobmax2 = 0.25d0
   refine_threshold = 20*0.5d0
   derefine_ratio = 20*1.d0/2.d0
   ditregrid = 100
   logflag(1)=T
/

 &paramlist
  courantpar = 0.5d0
 /

 &rhd_list
  He_abundance = 0.1d0
  rhd_gravity = .true.
  rhd_energy = .true.
  rhd_gamma = 1.6667d0
  rhd_radiation_force = .true.
  rhd_energy_interact = .true.
  rhd_radiation_diffusion = .true.
  rhd_radiation_advection = .true.
/

 &fld_list
  fld_Radforce_split = .false.
  fld_opacity_law = 'special'
  fld_fluxlimiter = 'Pomraning'
  fld_interaction_method = 'Halley'
  fld_diff_tol = 1.d-5
  fld_bisect_tol = 1.d-13
 /

  &wind_list
   cak_Q = 2.30d3
   cak_a = 0.66d0 
   cak_base = 0.66d0
   cak_x0 = 0.4d0
   cak_x1 = 0.65d0
   rho_bound = 1.d-7
   T_bound = 3.d5
   Gamma_e_bound = 0.5d0
   kappa_e = 0.34d0
   R_star = 15.d0
   M_star = 50.d0
   v_inf = 1.d8
   Mdot = 1.d-6
   fixed_lum = .false.
   Cak_in_D = .true.
   read_cak_table = .false. 
/
