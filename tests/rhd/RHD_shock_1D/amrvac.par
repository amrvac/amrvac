&testlist
        teststr=''
/

&filelist
  base_filename='./output/rhd_shock'
  saveprim         = F
  autoconvert      = T
  convert_type     = 'vtuBCCmpi'
/

 &savelist
   itsave(1,1)     = 0
   itsave(1,2)     = 0
   !ditsave_dat     = 1
   !ditsave_log     = 1
   dtsave_dat     = 1.d0
   dtsave_log     = 1.d0
/

 &stoplist
   time_max = 10.d0
   dtmin = 1.0d-20
/

 &methodlist
   time_stepper = 'threestep'
   time_integrator = 'IMEX_ARS3'
   flux_scheme     = 20*'hll'
   limiter         = 20*'minmod'
   source_split_usr = .false.
   typesourcesplit = 'sfs'
   small_values_method = 'replace'
   small_pressure = 1.d-12
   small_density = 1.d-12
/

&boundlist
  typeboundary_min1 = 4*'special'
  typeboundary_max1 = 4*'cont' !3*'cont','special'
  internalboundary = F
/

 &meshlist
   refine_max_level   = 1
   refine_criterion   = 3
   domain_nx1         = 256
   block_nx1          = 16
   xprobmin1       = -0.5d0
   xprobmax1       = 0.5d0
   refine_threshold   = 20*0.5d0
   derefine_ratio     = 20*1.d0/2.d0
 /

 &paramlist
  courantpar       = 0.6d0
  !dtpar           = 2.d-3
  slowsteps = 200
 /

 &rhd_list
  He_abundance = 0.d0 !0.075d0
  rhd_gravity = .false.
  rhd_energy = .true.
  rhd_gamma = 1.4d0
  rhd_radiation_formalism = 'fld'
  radio_acoustic_filter = .false.
  rhd_radiation_force = .true.
  rhd_energy_interact = .true.
  rhd_radiation_diffusion = .true.
  rhd_radiation_advection = .true.
 /

 &fld_list
  fld_Eint_split = .false.
  fld_Radforce_split = .false.
  fld_opacity_law = 'const'
  fld_kappa0 = 0.4d0
  fld_diff_scheme = 'mg'
  fld_interaction_method = 'Halley'
  fld_fluxlimiter = 'Diffusion'
  fld_diff_tol = 1.d-7
  /

  &shock_list
   rho1 = 1.d-2
   rho2 = 0.0685847d0 !0.0685874d0
   v1 = 1.d9
   v2 = 1.458051139d8
   T1 = 1.d4
   T2 = 4.239d7
   /
